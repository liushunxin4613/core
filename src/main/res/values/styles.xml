<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--示例类分割线-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:listDivider">@drawable/shape_example_divider</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>


    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!--设置背景图片填满了整个屏幕的activity主题-->
    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <!--设置Tab栏是纯色的  默认不适用跟随系统主题-->
    <style name="ColorTranslucentTheme" parent="AppTheme">
        <!--windowIsTranslucent解决swipebacklayout黑屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--设置Tab栏是纯色的  默认不适用跟随系统主题-->
    <style name="HomeColorTranslucentTheme" parent="AppTheme">
        <!--windowIsTranslucent解决swipebacklayout黑屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--SreachActivity主题-->
    <style name="SreachColorTranslucentTheme" parent="AppTheme">
        <!--windowIsTranslucent解决swipebacklayout黑屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--LoginActivity主题-->
    <style name="LoginColorTranslucentTheme" parent="AppTheme">

        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- 自定义dialog的style -->
    <style name="my_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>

    <!--login 登陆框-->
    <style name="txt_lab" parent="Widget.Design.TextInputLayout">
        <!-- 默认状态提示颜色和字体-->
        <item name="android:textColorHint">#8c8c8c</item>
        <item name="android:textSize">14sp</item>
        <!-- 下面可以根据需要设置，如果没有将默认使用默认theme的颜色 -->
        <!-- Label标签的颜色 -->
        <item name="colorAccent">@color/green</item>
        <!-- 默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/background_color_gray</item>
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="AppTheme.Photo.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="android:textColorPrimary">@color/colorPrimary</item>-->
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="AppTheme.xmf.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/green</item>
        <!--<item name="android:textColorPrimary">@color/colorPrimary</item>-->
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

</resources>
